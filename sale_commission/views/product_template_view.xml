<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="product_template_form_view_commission" model="ir.ui.view">
            <field name="name">product.template.common.form.commission</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <label for="sale_ok" position="after">
                    <div>
                        <field name="commission_free" />
                        <label for="commission_free" />
                    </div>
                </label>
            </field>
        </record>

        <record id="account_product_form_view_commission" model="ir.ui.view">
            <field name="name">account.product.form.commission</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="account.product_template_form_view" />
            <field name="arch" type="xml">
              <xpath expr="//page/group/group/field[@name='taxes_id']" position="after">
                <field name="commission" domain="[('application','=','product')]"/>
              </xpath>
            </field>
        </record>

        <record id="product_category_form_view_commission" model="ir.ui.view">
            <field name="name">product.category.form.commission</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view" />
            <field name="arch" type="xml">
              <xpath expr="//group[@name='first']" position="after">
                <group name="commission" col="2" string="Commission Rules">
                  <field name="commission" domain="[('application','=','product')]"/>
                </group>
              </xpath>
            </field>
        </record>

    </data>
</openerp>
